<selector
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/clear_map_button">

    <item android:state_pressed="false">
        <shape android:shape="oval" >
            <size
                android:height="@dimen/clear_map_button_radius"
                android:width="@dimen/clear_map_button_radius" />
            <solid android:color="@color/clear_map_button" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="oval" >
            <size
                android:height="@dimen/clear_map_button_radius"
                android:width="@dimen/clear_map_button_radius" />
            <solid android:color="@color/clear_map_button_pressed" />
        </shape>
    </item>
</selector>